<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" spacing="8.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.javafx.RelatorioController">
  <children>
    <Label text="Relatórios" />
    <HBox alignment="CENTER" spacing="8.0">
      <children>
        <Label text="Data início:" />
        <DatePicker fx:id="dpInicio" />
        <Label text="Data fim:" />
        <DatePicker fx:id="dpFim" />
      </children>
    </HBox>
    <HBox alignment="CENTER" prefHeight="25.0" prefWidth="512.0" spacing="12.0">
      <children>
        <Button fx:id="btnCancelar" onAction="#onCancelar" style="-fx-background-color: white; -fx-border-color: #C6490B;" text="Cancelar" />
        <Button fx:id="btnGerar" onAction="#onGerar" style="-fx-background-color: #C6490B;" text="Gerar" textFill="WHITE" />
      </children>
    </HBox>
  </children>
  <padding>
    <Insets bottom="12" left="12" right="12" top="12" />
  </padding>
</VBox>
