<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="456.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.javafx.TabTipoPagamentoController">
  <children>
    <HBox alignment="CENTER" prefHeight="79.0" prefWidth="662.0" style="-fx-background-color: darkgray; -fx-border-color: black; -fx-border-radius: 5; -fx-background-radius: 5;">
      <children>
            <TextField fx:id="TFiltro" onKeyTyped="#onFiltrar" prefHeight="26.0" prefWidth="430.0" promptText="Pesquisar..." />
            <Button mnemonicParsing="false" onAction="#onNovoTipo" style="-fx-background-color: #C6490B;" text="Novo Tipo" textFill="WHITE">
          <font>
            <Font name="System Bold" size="12.0" />
          </font>
          <HBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
          </HBox.margin>
        </Button>
      </children>
    </HBox>
    <TableView fx:id="tableView" prefHeight="200.0" prefWidth="200.0" style="-fx-border-radius: 5; -fx-background-radius: 5; -fx-border-color: gray;" VBox.vgrow="ALWAYS">
      <columns>
       <TableColumn fx:id="coId" prefWidth="60.0" text="ID" />
       <TableColumn fx:id="coNome" prefWidth="200.0" text="NOME" />
      </columns>
      <VBox.margin>
        <Insets bottom="10.0" top="10.0" />
      </VBox.margin>
      <columnResizePolicy>
        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
      </columnResizePolicy>
      <contextMenu>
        <ContextMenu>
          <items>
                <MenuItem mnemonicParsing="false" onAction="#onAlterar" text="Alterar" />
                  <MenuItem mnemonicParsing="false" onAction="#onApagar" text="Apagar" />
          </items>
        </ContextMenu>
      </contextMenu>
    </TableView>
    <HBox alignment="CENTER" layoutX="10.0" layoutY="10.0" prefHeight="43.0" prefWidth="683.0" style="-fx-background-color: white; -fx-border-color: black; -fx-border-radius: 5;">
        <children>
            <Button fx:id="btnFechar" mnemonicParsing="false" onAction="#onFechar" prefHeight="25.0" prefWidth="81.0" style="-fx-background-color: #C6490B;" text="Fechar" textAlignment="JUSTIFY" textFill="WHITE" />
        </children>
    </HBox>
  </children>
  <opaqueInsets>
    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
  </opaqueInsets>
  <padding>
    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
  </padding>
</VBox>
